<!--1.小程序的数据绑定: {{}} mustache-->
<view>hello {{name}}</view>
<view>my wife will be forever {{age}} years old</view>

<!--2.列表展示：wx:for-->
<view wx:for="{{students}}">{{item.id}}-{{item.name}}-{{item.age}}</view>

